{
  "name": "uptime-monitor-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "db:backup": "mongodump --uri=\"$MONGODB_URI\" --out=\"./backups/backup_$(date +%Y%m%d_%H%M%S)\"",
    "health": "curl http://localhost:5000/health"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "express-validator": "^7.0.1",
    "node-cron": "^3.0.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "winston": "^3.11.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
